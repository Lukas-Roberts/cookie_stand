<% if logged_in? %>
    <p><a href="/cookies" class="button">Home</a></p>
<% end %>

<h4>Edit your cookie below!</h4>

<form action="/cookies/<%= @cookie.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
    
    <p><label for="cookie_name">Cookie's Name:</label>
    <input type="text" name="cookie_name" id="cookie_name" value="<%= @cookie.name %>"></p>

    <p><label for="cookie_type">Type of Cookie:</label>
    <input type="text" name="cookie_type" id="cookie_type" value="<%= @cookie.cookie_type %>"></p>

    <p><input type="submit" value="Save Cookie!" class="button"></p>

</form>